@model Producto

<h1>Nuevo Producto</h1>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" type="text" class="form-control">
    </div>
  

    <div class="form-group">
        <label asp-for="Foto"></label>
        <input asp-for="Foto" type="url" placeholder="https://los_ingenieros.com" class="form-control">

    </div>

    <div class="form-group">
        <label asp-for="Decripcion"></label>
        <input asp-for="Decripcion" type="text" class="form-control">

    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" type="double" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Celular"></label>
        <input asp-for="Celular" type="int" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Lugar"></label>
        <input asp-for="Lugar" type="text" class="form-control">
    </div>
     <div class="form-group">
        <label asp-for="NombreComprador"></label>
        <input asp-for="NombreComprador" type="text" class="form-control">
    </div>
       
    <div class="form-group">
        <label asp-for="Categoria" > </label>
        <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" type="text" class="form-control"></select>
       
    </div> 

    <button class="btn btn-primary">Registrar</button>
</form>