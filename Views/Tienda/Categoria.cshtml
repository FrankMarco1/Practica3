@model List<Categoria>


<h1>Lista de Categorias</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
    
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron Categorias</td>
        </tr>
    }
</table>

